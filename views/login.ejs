<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Login</title>
		<link rel="stylesheet" href="./RegStyle.css">
	</head>
	<body>
		<h1 class="heading">Login</h1>
		<form id="login">
			<fieldset class="field">Fill your credentials here..<br>
			<input type="email" autocomplete="on" id="email" placeholder="email" /><br>
			<input type="password" autocomplete="on" id="password" placeholder="Password" /><br>
			<input type="submit" value="Login" />
		</fieldset>
		</form>
		<button class="RedirectBtn"><a href="/register"> not registered yet?</a></button>
		<script>
			const form = document.getElementById('login')
			form.addEventListener('submit', login)

			async function login(event) {
				event.preventDefault()
				const email = document.getElementById('email').value
				const password = document.getElementById('password').value

				const result = await fetch('/login', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json'
					},
					body: JSON.stringify({
						email,
						password
					})
				}).then((res) => res.json())

				if (result.status === 'ok') {
					// everything went fine
					console.log('Got the token: ', result.data)
					localStorage.setItem('token', result.data)
					window.location.href="/main.html"
				} else {
					alert(result.error)
				}
			}
		</script>
	</body>
</html>
